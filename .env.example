# ===== APPLICATION SETTINGS =====
APP_URL=http://localhost:8080
SERVER_PORT=8080

# ===== DATABASE CONFIGURATION =====
DB_URL=jdbc:postgresql://localhost:5432/shoutxdb
DB_USER=shoutxuser
