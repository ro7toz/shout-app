# ========================================
# ShoutX - Environment Configuration
# PostgreSQL Only Setup
# ========================================

# ===== DATABASE (PostgreSQL) =====
DB_URL=jdbc:postgresql://localhost:5432/shoutdb
DB_USER=shoutuser
DB_PASSWORD=password123

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-super-secure-32-character-minimum-jwt-secret-key-here-change-in-prod
JWT_EXPIRATION=86400000

# ===== INSTAGRAM OAUTH (Primary Auth) =====
INSTAGRAM_CLIENT_ID=your_instagram_app_id_from_meta_developer
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret_from_meta_developer
INSTAGRAM_REDIRECT_URI=http://localhost:8080/oauth2/callback/instagram
INSTAGRAM_GRAPH_API_ACCESS_TOKEN=your_long_lived_instagram_token

# ===== REDIS CONFIGURATION =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== EMAIL CONFIGURATION (Gmail) =====
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_16_char_gmail_app_password
EMAIL_FROM=noreply@shoutx.co.in

# ===== PAYMENT GATEWAYS =====
# Razorpay (India)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# PayPal (International)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ===== APPLICATION URLS =====
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ===== SERVER CONFIGURATION =====
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

