# ========================================
# ShoutX - Environment Configuration
# ========================================

# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/shoutx?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USER=root
DB_PASSWORD=your_mysql_root_password

# JWT Configuration
JWT_SECRET=shoutx-super-secret-jwt-key-change-this-in-production-min-32-chars

# Instagram OAuth
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=http://localhost:8080/oauth2/callback/instagram

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:8080/auth/callback

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (Gmail SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM=noreply@shoutx.co.in

# SendGrid (Optional - if using SendGrid instead of Gmail)
SENDGRID_API_KEY=your_sendgrid_api_key

# AWS S3 Configuration (Optional)
AWS_S3_BUCKET=shoutx-media
AWS_REGION=ap-south-1
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key

# Payment Gateway - Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Payment Gateway - PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Application Settings
APP_URL=http://localhost:8080
SPRING_PROFILE=dev

# Instagram API
INSTAGRAM_GRAPH_API_ACCESS_TOKEN=your_instagram_graph_api_token
INSTAGRAM_WEBHOOK_SECRET=your_webhook_secret
